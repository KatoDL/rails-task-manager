<h1> <%= @task.title %></h1>
<p><%= @task.details %></p>
<p>This task is <%= @task.completed ? "completed" : "not completed" %></p>
<%= link_to "back to list", tasks_path %>
<%= link_to "edit this task", task_edit_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
